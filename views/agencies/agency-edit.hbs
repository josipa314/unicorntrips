<h3>Edit the Agency: {{name}}</h3>

<form
  action="/agencies/{{_id}}/edit"
  method="POST"
  enctype="multipart/form-data"
>

  <label>
    Name:
    <input type="text" name="name" value="{{name}}" />
  </label>

  <label>
    Image:
    <input
      type="file"
      name="imageFile"
      value="{{imageFile}}"
      class="form-control-file"
    />
  </label>

  <label>
    Description:
    <textarea
      type="text"
      name="description"
      cols="50"
      rows="4"
    >{{description}}</textarea>
  </label>

  <label>
    Location:
    <input type="text" name="location" value="{{location}}" />
  </label>

  <label>
    Rating:
    <input type="number" name="rating" min="1" max="10" value="{{rating}}" />
  </label>

  <button>Save changes</button>

</form>