<section>
  <form action="/agencies/create" method="POST" enctype="multipart/form-data">
    <fieldset>
      <legend>Become an Agency</legend>
      <label>
        Name:
        <input type="text" name="name" required />
      </label>
      <br />

      <label>Upload an Image:
        <input type="file" name="imageFile" class="form-control-file" />
      </label>
      <br />

      <label>
        Description:
        <textarea name="description" cols="30" rows="4"> </textarea>
      </label>
      <br />

      <label>
        Location:
        <input type="text" name="location" />
      </label>
      <br />

      <label>
        Rate:
        <input type="number" name="rating" min="1" max="10" />
      </label>
      <br />

      <button type="submit"> Create your agency!</button>
      <br />
      <hr />
    </fieldset>
  </form>
</section>
